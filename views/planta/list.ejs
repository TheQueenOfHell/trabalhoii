<%- include('../cabecalho') -%>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Plantas</h2>
        </div>
        <!-- Hover Rows -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <form action="/planta" method="POST">
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" name="pesquisa" class="form-control"
                                                placeholder="Pesquisando..">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" style="margin-top:0px;" class="btn btn-primary m-t-15 waves-effect">Pesquisa</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nome Científico</th>
                                    <th>Nome Popular</th>
                                    <th>Sintomas</th>
                                    <th>Efeitos Colaterais</th>
                                    <th>Localidade</th>
                                    <th>Especifixação da Planta</th>
                                    <th>Biologo</th>
                                    <th>Foto</th>
                                    <th>Edita</th>
                                    <th>Deleta</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% Plantas.forEach(function(planta){ %>
                                <tr>
                                    <th scope="row"><%=planta._id%></th>
                                    <td><%=planta.nomec%></td>
                                    <td><%=planta.nomep%></td>
                                    <td><%=planta.sintomas%></td>
                                    <td><%=planta.efeitos%></td>
                                    <td><%=planta.localidade.estado%></td>
                                    <td><%=planta.eplanta.especie%></td>
                                    <td><%=planta.biologo.nome%></td>
                                    <td>
                                        <img style="height: 50px;" src="/arquivos/<%=planta.foto%>">
                                    </td>
                                    <td>
                                        <a href="/planta/edit/<%=planta._id%>"
                                            class="btn btn-warning btn-circle-lg waves-effect waves-circle waves-float">
                                            <i class="material-icons">edit</i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/planta/del/<%=planta._id%>"
                                            class="btn btn-danger btn-circle-lg waves-effect waves-circle waves-float">
                                            <i class="material-icons">delete</i>
                                        </a>
                                    </td>
                                </tr>
                                <%});%>
                            </tbody>
                            <tfoot>
                                <% if(typeof msg !== "undefined"){ %>
                                <div class="alert bg-green alert-dismissible" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                            aria-hidden="true">&times;</span></button>
                                    <%=msg%>
                                </div>
                                <% } %>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Hover Rows -->

    </div>
</section>
<%- include('../rodape') -%>